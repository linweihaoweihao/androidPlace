<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout 
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="-40px"
        />
        
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:orientation="horizontal"
	    android:gravity="bottom"
	    >
		<CheckBox
		    android:id="@+id/tab_main"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="12sp"
            android:textColor="#ffffff"
            android:checked="true"
            android:background="@drawable/btn_tab_home"
            android:button="@null"
		    />    
		    
				<CheckBox 
		    android:id="@+id/tab_loan"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_tab_loan"
            android:button="@null"
		    />    
		    
		    		<CheckBox 
		    android:id="@+id/tab_account"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_tab_account"
            android:button="@null"
		    />    
		    		<CheckBox 
		    android:id="@+id/tab_setting"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_tab_setting"
            android:button="@null"
		    />    
		    
	</LinearLayout>
	
</LinearLayout>
